@using Microsoft.AspNetCore.Identity
@model MovieSearch.ViewModel.ChangeRoleViewModel

<h2>Зміна ролей для користувача @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            @if(role.Name != "user")
            {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
        }
    </div>
    <button type="submit" class="btn btn-outline-secondary">Зберегти</button>
</form>